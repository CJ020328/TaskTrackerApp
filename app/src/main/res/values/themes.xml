<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme"  parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/colorLightBlue</item>
        <item name="colorAccent">@color/colorLightBlue</item>
        <item name="colorControlActivated">@android:color/black</item>
        <!-- Other theme attributes -->
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <!-- active checkbox color -->
        <item name="colorControlActivated">@color/colorLightBlue</item>
        <!-- inactive checkbox color -->
        <item name="colorControlNormal">@color/colorLightBlue</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <!-- active radio button color -->
        <item name="colorControlActivated">@color/colorLightBlue</item>
        <!-- inactive radio button color -->
        <item name="colorControlNormal">@color/colorLightBlue</item>
    </style>

    <style name="PickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorLightBlue</item> <!-- Or any other color you want -->
    </style>



</resources>